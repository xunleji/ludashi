<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#ffffff">

    <RelativeLayout 
        android:id="@+id/down_item"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        >
        
        <RelativeLayout 
            android:id="@+id/down_item_rl1"
            android:layout_width="80dp"
            android:layout_height="80dp">
            
	        <ImageView
	            android:id="@+id/downitemiv"
	            android:layout_width="55dp"
	            android:layout_height="60dp"
	            android:layout_centerInParent="true"
	            android:src="@drawable/image_book" />
        
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/down_item_rl2"
            android:layout_toRightOf="@+id/down_item_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
	        
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downrl1"
                android:layout_marginTop="8dp">
                
                <TextView 
                    android:id="@+id/down_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="louis koo"
                    android:textColor="#1489ba"/>
                
                <TextView 
                    android:id="@+id/downrltv2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="下载中"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"/>
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downrl2"
                android:layout_below="@+id/downrl1">
                
                
                <ProgressBar 
                    android:id="@+id/down_ProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="250dp"
                    android:layout_height="16dp"
                    android:progress="50"
                    android:progressDrawable="@drawable/progressbar_mini"
                    android:background="@drawable/jingdugray"
                    android:layout_marginRight="4dp"/>
                
            </RelativeLayout>
                
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downrl3"
                android:layout_below="@+id/downrl2">
                
                <RelativeLayout 
                    android:id="@+id/downrl4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">
                

                <Button
                    android:id="@+id/pause"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/downiv3"
                    android:background="@drawable/button_white"
                    android:text="暂停  "
                    android:textSize="12dp" />
                
                <Button
                    android:id="@+id/delete"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/downiv3"
                    android:layout_toRightOf="@+id/pause"
                    android:background="@drawable/button_white"
                    android:text="删除  "
                    android:textSize="12dp" />
                
                </RelativeLayout>
                
                <RelativeLayout 
                    android:id="@+id/downrl5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/downrl4">
                
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/downtv_se"
	                    android:text="louis koo"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginTop="5dp"
	                    android:layout_marginRight="4dp"/>
                
                </RelativeLayout>
                
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    

</LinearLayout>